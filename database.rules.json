{
  "rules": {
    // -------------------------------------------------------
    // Firebase Auth is now required for all access.
    //
    // Replace the two placeholder emails below with the real
    // Google account emails for El and Tero, then deploy with:
    //
    //   firebase deploy --only database
    //
    // The email values must be duplicated here because Firebase
    // rules do not support dynamic allowlist lookups.
    // -------------------------------------------------------

    ".read":  "auth != null && (auth.token.email === 'YOUR_EMAIL@gmail.com' || auth.token.email === 'THEIR_EMAIL@gmail.com')",
    ".write": "auth != null && (auth.token.email === 'YOUR_EMAIL@gmail.com' || auth.token.email === 'THEIR_EMAIL@gmail.com')"
  }
}
